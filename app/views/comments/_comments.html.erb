<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="card" style="margin-bottom: 12px; padding: 8px;">
        <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
        <%= link_to 'Delete', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
<% end %>